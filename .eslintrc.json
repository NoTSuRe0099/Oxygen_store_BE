{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",

  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "linebreak-style": "off",
    "function-paren-newline": "off",
    "no-unused-vars": "warn",
    "operator-linebreak": "off",
    "no-underscore-dangle": "off",
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "": "never",
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
